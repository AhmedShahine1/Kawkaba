@model LoginModel
@{

    Layout = "_RegisterLayout";
}
<form asp-action="Login" method="post">
    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
    <span class ="text-danger">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </span>
    <div class="input-group mb-3">
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        <input asp-for="Password" class="form-control" placeholder="Password" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-7">
            <div class="icheck-primary">
                <input asp-for="RememberMe" id="remember" />
                <label for="remember">
                    تذكرني
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-5">
            <button type="submit" style="background-color: #4055a8; color: white;" class="btn btn-block">تسجيل دخول</button>
        </div>
        <!-- /.col -->
    </div>
</form>
<p class="mb-1">
    <a asp-area="Lawyer" asp-controller="Lawyer" asp-action="Register" class="link-primary">
        <p>انشاء حساب</p>
    </a>
</p>
